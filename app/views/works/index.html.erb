<div class="py-4">
  <h1 class="text-2xl font-bold mb-4">Works</h1>
  <table class="table-auto w-full">
    <thead>
      <tr class="bg-gray-200">
        <th class="py-2 px-4 text-left">Title</th>
        <th class="py-2 px-4 text-left">Content</th>
        <th class="py-2 px-4 text-left">ユーザー名</th>
        <th class="py-2 px-4"></th>
      </tr>
    </thead>
    <tbody>
      <% @works.each do |work| %>
        <tr class="bg-white">
          <td class="py-2 px-4"><%= work.title %></td>
          <td class="py-2 px-4"><%= work.content %></td>
          <td class="py-2 px-4"><%= work.user.name %></td>
          <td class="py-2 px-4">
            <%= link_to "View", work_path(work.id), class: "inline-block bg-blue-500 text-white rounded-md px-4 py-2 hover:bg-blue-600 transition duration-300" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New Work", new_work_path, class: "inline-block bg-green-500 text-white rounded-md px-4 py-2 hover:bg-green-600 transition duration-300 mt-4" %>
</div>
